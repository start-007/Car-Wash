<%- include('partials/header'); -%>

<link rel="stylesheet" href="/css/styles.css">
<title>Signup</title>
</head>
<body>

  <h1><%= Message %></h1>

  <form action="/auth/signup/details" method="post">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Name" name="name">
      <label>Email address</label>
      <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" name="email">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      <label>Phone</label>
      <input type="tel" class="form-control" placeholder="Enter Phone Number" name="phone">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" placeholder="Password" name="password">
      <label>Retype Password</label>
      <input type="password" class="form-control" placeholder="Retype Password" name="retypepassword">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>


  <script src="/javascript/signup.js"></script>
<%- include('partials/footer'); -%>