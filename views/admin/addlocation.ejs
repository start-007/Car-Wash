<%- include("../partials/header") -%>

<link rel="stylesheet" href="/css/form.css">
  <title>Admin Add location</title>
</head>
<body>

  <div class="container content">
    <h1><%=Message %></h1>
    <h1 id="error"></h1>
    <form id="locationform">
      <div class="form-row">
        <div class="form-group col-md-12">
          <label class="required">Branch Name</label>
          <input type="text" class="form-control" placeholder="Branch Name" name="branchname" required>
        </div>
        <div class="form-group col-md-12">
          <label class="required">Contact</label>
          <input type="text" class="form-control" placeholder="Contact" name="contact" required>
        </div>
      </div>

      <div class="form-group">
        <label class="required">Address</label>
        <input type="text" class="form-control"  name="address" placeholder="1234 Main St" required> 
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label class="required">City</label>
          <input type="text" class="form-control"  name="city"  id="inputCity" required>
        </div>
        <div class="form-group col-md-12">
          <label class="required">State</label>
          <input type="text" class="form-control" name="state" required>
        </div>
        <div class="form-group col-md-12">
          <label class="required">Zip</label>
          <input type="text" class="form-control" name="zip" required>
        </div>
      </div>
      <div class="form-group">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="gridCheck" required>
          <label class="form-check-label" for="gridCheck">
            Check ME to Confirm
          </label>
        </div>
      </div>
      <button type="submit" id="submit" class="btn btn-primary">Confirm</button>
    </form>
</body>
<script src="/javascript/addlocation.js"></script>
</html>